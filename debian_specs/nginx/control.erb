Source: nginx
Section: httpd
Priority: optional
Maintainer: <%= MAINTAINER_NAME %> <<%= MAINTAINER_EMAIL %>>
Build-Depends: autotools-dev,
<% if is_distribution?(">= precise") || is_distribution?(">= wheezy") -%>
               debhelper (>= 9),
<% else -%>
               debhelper (>= 7),
<% end -%>
               po-debconf,
<% if is_distribution?(">= trusty") || is_distribution?(">= jessie") -%>
               dh-systemd (>= 1.5),
<% end -%>
               dpkg-dev (>= 1.15.5),
               libexpat-dev,
               <%= libgd_dependency %>,
               libgeoip-dev,
               <%= lua_dependency %>,
               libmhash-dev,
               libpam0g-dev,
               libpcre3-dev,
               libperl-dev,
